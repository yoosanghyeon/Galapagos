<resources>

    <style name="galaAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">#73ABCB</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="tabTextSize" parent="android:Widget.TextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="galaDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:dialogTitle">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>



    <style name="galaAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="galaAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>